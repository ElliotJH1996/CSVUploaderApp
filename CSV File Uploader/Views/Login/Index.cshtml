@{
	ViewData["Title"] = "Login Page";
}
<html lang="en">
<head>
	<title>Login</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body class="bg-info">
	<div class="container">
		<div class="row">
			<div class="col-md-6 offset-md-3">
				<h2 class="text-center text-white mt-5">Login</h2>
				<br>
				<div class="card my-5">
					<form class="card-body cardbody-color p-lg-5" enctype="multipart/form-data">
						<div class="mb-3">
							<input type="text" class="form-control" name="username" id="username" placeholder="username" required maxlength="50" value="">
						</div>
						<div class="mb-3">
							<input type="password" class="form-control" name="password" id="password" placeholder="password" required maxlength="12" value="">
						</div>
						<div class="text-center">
							<button id="Button" type="submit" name="submit" formmethod="post" class="btn btn-secondary btn-sm">Login</button>
						</div>
					</form>
					@if (Model != null)
					{
						<div class="card my-2">

							<div class="mb-3 bg-danger flex-fill">
								<h5 class="text-bg-dark flex-fill">There is no user with the username, @Model.Username, in the database, please try again!</h5>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</body>

</html>
<script>
	function UploadCSV(e) {
		e.preventDefault();
		let username = document.getElementById("username");
		let password = document.getElementById("password");
		let req = new XMLHttpRequest();
		let formData = new FormData();
		formData.append("username", username);
		formData.append("password", password);

		req.open("POST", 'https://localhost:44316/api/User/');
		req.send(formData);
</script>